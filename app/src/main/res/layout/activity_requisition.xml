<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">
        <org.openlmis.core.view.widget.BorderedEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:labelWidth="100dp"
            android:background="@drawable/border_bg"
            app:text="@string/label_consultation"
            app:ems="3"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:background="@drawable/border_bg"
            android:divider="@drawable/divider_horizontal"
            android:showDividers="middle">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider_vertical"
                android:showDividers="middle">
                <org.openlmis.core.view.widget.BorderedEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:labelWidth="80dp"
                    app:text="@string/label_kits_received"
                    app:ems="3"/>
                <org.openlmis.core.view.widget.BorderedEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:labelWidth="40dp"
                    app:text="@string/label_us"
                    app:ems="2"/>
                <org.openlmis.core.view.widget.BorderedEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:labelWidth="40dp"
                    app:text="@string/label_ape"
                    app:ems="2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider_vertical"
                android:showDividers="middle">
                <org.openlmis.core.view.widget.BorderedEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:text="@string/label_kits_opened"
                    app:labelWidth="80dp"
                    app:ems="3"/>
                <org.openlmis.core.view.widget.BorderedEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:labelWidth="40dp"
                    app:text="@string/label_us"
                    app:ems="2"/>
                <org.openlmis.core.view.widget.BorderedEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:labelWidth="40dp"
                    app:text="@string/label_ape"
                    app:ems="2"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>





</LinearLayout>