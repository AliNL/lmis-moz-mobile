<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/title_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/border_bg"
        android:divider="@drawable/divider_horizontal"
        android:orientation="vertical"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/stock_card_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/title_stock_movement"
                android:textColor="@color/primary_text"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_vertical"
            android:showDividers="middle">

            <TextView
                style="@style/sheet_header2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/label_cmm"
                android:visibility="gone" />

            <TextView
                style="@style/sheet_header2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_validate_period" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_vertical"
            android:showDividers="middle">

            <EditText
                style="@style/sheet_header2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <org.openlmis.core.view.widget.ExpireDateViewGroup
                android:id="@+id/vg_expire_date_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

            </org.openlmis.core.view.widget.ExpireDateViewGroup>
        </LinearLayout>

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/action_panel"
        android:layout_below="@+id/title_panel"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <ListView
            android:id="@+id/list_stock_movement"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/border_bg"
            android:divider="@drawable/divider_horizontal"
            android:paddingRight="-10dp" />

    </HorizontalScrollView>

    <include
        android:id="@+id/action_panel"
        layout="@layout/layout_form_action_for_stock_movement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>