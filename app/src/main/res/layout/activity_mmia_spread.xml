<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mmia_spread_bg"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <org.openlmis.core.view.widget.MMIARnrForm
                android:id="@+id/rnr_form_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mmia_spread_list_bg"
                android:divider="@drawable/divider_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/divider"
                android:showDividers="middle" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="60dp"
                android:layout_marginTop="8dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <org.openlmis.core.view.widget.MMIARegimeList
                        android:id="@+id/regime_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/mmia_spread_list_bg"
                        android:divider="@drawable/divider_horizontal"
                        android:padding="@dimen/divider"
                        android:showDividers="middle" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@drawable/mmia_spread_regime_total_bg"
                        android:divider="@drawable/divider_vertical"
                        android:orientation="horizontal"
                        android:showDividers="middle">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_mmia_info_name"
                            android:gravity="end|center_vertical"
                            android:labelFor="@+id/tv_regime_total"
                            android:minHeight="30dp"
                            android:paddingEnd="8dp"
                            android:paddingStart="8dp"
                            android:text="@string/label_total" />

                        <TextView
                            android:id="@+id/tv_regime_total"
                            android:layout_width="@dimen/mmia_spread_item_common_width"
                            android:layout_height="match_parent"
                            android:background="@color/mmia_spread_bg"
                            android:freezesText="true"
                            android:gravity="center_vertical"
                            android:minHeight="30dp"
                            android:padding="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        style="@style/mmia_spread_list_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/black"
                        android:gravity="center"
                        android:minHeight="38dp"
                        android:text="@string/label_mmia_speed_info_header"
                        android:textColor="@color/white" />

                    <org.openlmis.core.view.widget.MMIAInfoList
                        android:id="@+id/mmia_info_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/mmia_spread_list_bg"
                        android:divider="@drawable/divider_horizontal"
                        android:padding="@dimen/divider"
                        android:showDividers="middle" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/ly_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/et_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_mmia_comment"
                            android:minHeight="50dp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_button"
            android:clickable="true"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:clickable="false"
                android:drawableStart="@drawable/ic_save"
                android:text="@string/btn_save"
                android:textColor="@color/color_accent" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/blue_button"
            android:text="@string/btn_complete"
            android:textColor="@color/white" />

    </LinearLayout>

</merge>