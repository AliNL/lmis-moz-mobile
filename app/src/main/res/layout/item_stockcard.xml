<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ItemStock.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <TextView
        android:id="@+id/product_name"
        style="@style/ItemStock.ProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="product name" />

    <TextView
        android:id="@+id/product_unit"
        style="@style/Text.Black.Normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/product_name"
        android:layout_alignStart="@id/product_name"
        android:layout_below="@id/product_name"
        tools:text="product unit" />

    <View
        android:id="@+id/stockcard_line"
        style="@style/HorizontalLine"
        android:layout_below="@id/product_unit"
        android:layout_marginTop="@dimen/margin_small" />

    <RelativeLayout
        android:id="@+id/vg_stock_on_hand_bg"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/stockcard_line"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/product_name"
        android:background="@color/color_primary_50">

        <ImageView
            android:id="@+id/iv_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/ic_warning"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_stock_on_hand"
            style="@style/ItemStock.TextSOH"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/iv_warning"
            tools:text="100" />

    </RelativeLayout>

</RelativeLayout>